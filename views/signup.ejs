<%- include('partials/header') %>
  <div class="section">
    <div class="container">
      <h2>Sign Up</h2>
      <form action="/signup" method="post">
        <div class="mb-3">
          <label for="email" class="form-label">Usename</label>
          <input type="email" class="form-control" name="username">
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" name="password">
        </div>
        <button type="submit" class="x col-12 btn btn-primary">Sign Up</button>
        <a class="x col-12 btn btn-outline-primary" role="button" href="/auth/google">Continue with Google</a>
        <p id="login">Already have an account? <a href="/login">Log in</a></p>
      </form>
    </div>
  </div>
  <%- include('partials/footer') %>